#!/usr/bin/env bash
# surrogate
# backup rotation/retention

function rotate_backups() {
#	set -u
	echo "Rotating old backups"
	find $backup_directory/daily/ -type d -mtime +${daily_retention} -exec rm -fvR {} \;
	find $backup_directory/weekly/ -type d -mtime +${weekly_retention} -exec rm -fvR {} \;
	find $backup_directory/monthly/ -type d -mtime +${monthly_retention} -exec rm -fvR {} \;

}
